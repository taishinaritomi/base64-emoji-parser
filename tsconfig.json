{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "baseUrl": "src",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules","dist"]
}
